<?xml version="1.0" encoding="utf-8" ?>
<fresh:FreshBaseContentPage 
    xmlns:fresh="clr-namespace:FreshMvvm;assembly=FreshMvvm"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="SQLiteFreshMVVM.Pages.LogInPage"
    Title="LogIn">
    
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand">
            <StackLayout Padding="15" Spacing="5">
                <Label Text="UserName" />
                <Entry Text="{Binding userNameIn, Mode=TwoWay}" />

                <Label Text="Contraseña" />
                <Entry Text="{Binding passwordIn , Mode=TwoWay}" IsPassword="True"/>

                <Button Text="Entrar" Command="{Binding EnterCommand}" />

            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
 
</fresh:FreshBaseContentPage>